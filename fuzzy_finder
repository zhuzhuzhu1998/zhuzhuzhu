# 模糊搜索
    def fuzzy_finder(self,key, data):
        """
        模糊查找器
        :param key: 关键字
        :param data: 数据
        :return: list
        """
        # 结果列表
        suggestions = []
        # 非贪婪匹配，转换 'djm' 为 'd.*?j.*?m'
        # pattern = '.*?'.join(key)
        pattern = '.*%s.*'%(key)
        # 编译正则表达式
        regex = re.compile(pattern)
        for item in data:
            # 检查当前项是否与regex匹配。
            match = regex.search(item['name'])
            if match:
                # 如果匹配，就添加到列表中
                suggestions.append(item)
        return suggestions
